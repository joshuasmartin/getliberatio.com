%ol.breadcrumb
  %li.active
    Tickets

.row
  .col-md-10

    %ul.nav.nav-tabs
      %li.active
        = link_to "All", "#all", "data-toggle" => "tab"
      %li
        = link_to "Closed", "#closed", "data-toggle" => "tab"

    .tab-content
      #all.tab-pane.active

        %table.table.table-bordered.table-striped.table-condensed
          %thead
            %tr
              %th.col-md-1 Status
              %th.col-md-1 Priority
              %th Description
              %th.col-md-2 Category

          %tbody
            - if @tickets.any?
              - @tickets.each do |ticket|
                %tr
                  %td #{ticket.status}
                  %td #{ticket.priority}
                  %td #{link_to ticket.description, ticket_path(ticket)}
                  %td #{ticket.category}
            - else
              %tr
                %td{ colspan: 5 }
                  Yay! You don't have any tickets
                  / TODO add image of oh no or something. have it link to a modal that displays instructions

      #closed.tab-pane

  .col-md-2
    = link_to "Open New Ticket", new_ticket_path, :class => "btn btn-primary btn-block"
