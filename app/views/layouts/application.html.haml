!!! 5
%html
  %head
    %title Liberatio

    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

%body

  %nav.navbar.navbar-default.navbar-fixed-top{ role: "navigation" }
    .container
      .navbar-header
        = link_to "Liberatio", root_path, :class => "navbar-brand"

      - if current_user
        %ul.nav.navbar-nav
          %li{ :class => ("active" if @highlight == "devices") }
            = link_to nodes_path do
              = image_tag("devices.png", :alt => "Software", :style => "height: 20px;")
              Devices
          %li{ :class => ("active" if @highlight == "software") }
            = link_to instances_path do
              = image_tag("software.png", :alt => "Software", :style => "height: 20px;")
              Software
          %li{ :class => ("active" if @highlight == "protection") }
            = link_to nodes_path do
              = image_tag("protection.png", :alt => "Software", :style => "height: 20px;")
              Protection
      - else
        %ul.nav.navbar-nav
          %li
            = link_to "Pricing", browse_pricing_path

      - if current_user
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to "#", "data-toggle" => "dropdown", :class => "dropdown-toggle" do
              Joshua Shane Martin
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "My Organization", settings_organization_path(current_user.organization_id)
              %li.divider
              %li
                = link_to "My Account", settings_user_path(current_user)
              %li
                = link_to "Logout", logout_path, method: :delete
      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Login or Register", login_path

  .container

    .row
      .col-md-12
        - unless notice.nil?
          .alert.alert-info
            = notice

        - unless alert.nil?
          .alert.alert-danger
            = alert

    = yield

  %footer.container
    %hr/
    %small
      %p.text-muted
        &copy; 2014, Joshua Shane Martin | Icons by #{link_to "icons8", "http://icons8.com/"}