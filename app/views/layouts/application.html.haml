!!! 5
%html
  %head
    %title Liberatio

    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

%body

  %nav.navbar.navbar-default.navbar-fixed-top{ role: "navigation" }
    .container
      .navbar-header
        = link_to "Liberatio", root_path, :class => "navbar-brand"

      - if current_user
        %ul.nav.navbar-nav
          %li
            = link_to "Devices", nodes_path
          %li
            = link_to "Software", instances_path
          %li
            = link_to "Protection", nodes_path

      - if current_user
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to "#", "data-toggle" => "dropdown", :class => "dropdown-toggle" do
              Joshua Shane Martin
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "My Organization", settings_organization_path(current_user.organization_id)
              %li.divider
              %li
                = link_to "My Account", settings_user_path(current_user)
              %li
                = link_to "Logout", logout_path, method: :delete
      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Login or Register", login_path

  .container

    .row
      .col-md-12
        - unless notice.nil?
          .alert.alert-info
            = notice

        - unless alert.nil?
          .alert.alert-danger
            = alert

    = yield

  %footer.container
    %hr/
    %small
      %p.text-muted
        &copy; 2014, Joshua Shane Martin | Icons by #{link_to "icons8", "http://icons8.com/"}