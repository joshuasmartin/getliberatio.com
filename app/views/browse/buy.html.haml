.row

  .col-md-offset-1.col-md-5

    %h4 Great, you're signing up for the
    %h2 #{session[:plan][:name]} Plan
    %h5.text-muted You'll be billed $#{session[:plan][:price_cents]/100} every month

  .col-md-6

    - if !current_user
      .row
        .col-md-6
          .well
            = link_to "Sign In", new_session_path, :class => "btn btn-primary btn-lg"
        .col-md-6
          .well
            = link_to "Register", new_user_path, :class => "btn btn-primary btn-lg"
    - else
      %h4 Credit or Debit Card
      %hr

      %form{ :action => "/charge", :method => "POST" }
        %script{ :src => "https://checkout.stripe.com/checkout.js", :class => "stripe-button", "data-key" => Rails.configuration.stripe[:publishable_key], "data-image" => "", "data-name" => "Signing Up", "data-description" => "#{session[:plan][:name]} Plan ($#{session[:plan][:price_cents]/100}/month)", "data-amount" => session[:plan][:price_cents], "data-email" => current_user.email_address }