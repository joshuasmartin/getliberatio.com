- content_for :title, "Sign In or Register"

.row.row-padded

  .col-md-4.col-md-offset-1
    %h3 Don't Have an Account?
    %hr/

    %p #{link_to "Register Now", new_user_path, :class => "btn btn-lg btn-primary"}

  .col-md-4.col-md-offset-1
    %h3 Have an Account?
    %hr/

    = form_tag sessions_path, :role => "form" do

      .form-group
        = label_tag :email_address, "Email Address"
        = email_field_tag :email_address, params[:email_address], :class => 'form-control first', :required => true

      .form-group
        = label_tag :password, "Password"
        = password_field_tag :password, nil, :class => "form-control", :required => true

      <button type="submit" class="btn btn-primary">Continue</button>
      = link_to "Forgot Password?", forgot_password_path, :class => "btn btn-default"
